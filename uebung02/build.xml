<project name="uebung_02" default="compile" basedir=".">

    <property name="src.algebra" location="src/algebra"/>
    <property name="src.tests" location="src/tests"/>
    <property name="target.algebra" location="app/exercise/algebra"/>
    <property name="target.tests" location="app/exercise/tests"/>

    <target name="delete">
        <delete dir="app"/>
        <delete dir="javadocs"/>
        <echo message="old files deleted!"/>
    </target>


    <target name="create" depends="delete">
        <mkdir dir="app/exercise/algebra"/>
        <mkdir dir="app/exercise/tests"/>
        <mkdir dir="javadocs"/>
        <echo message="new dir created!"/>
    </target>


    <path id="classpath">
        <pathelement location="src/tests"/>
        <pathelement location="src/algebra"/>
        <pathelement location="app/exercise"/>
    </path>

    <target name="compile" depends="create">
        <javac srcdir="src/algebra/one" destdir="app/exercise/algebra" includeantruntime="true"/>
        <javac srcdir="src/algebra/one" destdir="app/exercise/algebra" includeantruntime="true"/>
        <javac srcdir="src/tests"   destdir="app/exercise/tests"  includeantruntime="true"/>
        <echo message=".javas compiled!"/>
    </target>

    <target name="javadocs" depends="compile">
        <javadoc destdir="javadocs" source="asd"/>


    </target>





</project>